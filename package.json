{
	"name": "torahcalc",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run nearley && vite dev",
		"build": "npm run nearley && vite build",
		"static": "cross-env PUBLIC_ADAPTER='static' npm run build",
		"static:dev": "cross-env PUBLIC_ADAPTER='static' npm run dev",
		"deploy": "npm run build && vercel --prod",
		"preview": "npm run nearley && vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "npm run nearley && vitest",
		"lint": "prettier --plugin-search-dir . --check src/**/*.{svelte,js,css,html} *.{js,ts,json,md} && eslint src/**/*.{svelte,js}",
		"format": "prettier --plugin-search-dir . --write src/**/*.{svelte,js,css,html} *.{js,ts,json,md}",
		"nearley": "node src/lib/grammars/scripts/prepare-input.js && nearleyc src/lib/grammars/main.ne -o src/lib/grammars/generated/main.cjs && node src/lib/grammars/scripts/modify-output.js"
	},
	"dependencies": {
		"@capacitor/android": "^5.3.0",
		"@capacitor/cli": "^5.3.0",
		"@capacitor/core": "^5.3.0",
		"@capacitor/ios": "^5.3.0",
		"@fortawesome/free-brands-svg-icons": "^6.4.2",
		"@fortawesome/free-solid-svg-icons": "^6.4.2",
		"@hebcal/core": "^4.3.3",
		"@hebcal/learning": "^1.5.1",
		"cross-env": "^7.0.3",
		"dayjs": "^1.11.10",
		"dotenv": "^16.3.1",
		"nearley": "^2.20.1",
		"svelte-fa": "^3.0.4",
		"svelte-toc": "^0.5.6"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "^4.5.10",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/adapter-vercel": "^3.0.3",
		"@sveltejs/kit": "^1.20.4",
		"@types/cookie": "^0.5.1",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte": "^2.30.0",
		"prettier": "^2.8.0",
		"prettier-plugin-svelte": "^2.10.1",
		"svelte": "^4.0.5",
		"svelte-check": "^3.4.3",
		"vite": "^4.4.2",
		"vitest": "^0.34.4"
	}
}
