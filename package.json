{
	"name": "torahcalc",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"dev": "npm run nearley && vite dev",
		"build": "npm run nearley && vite build",
		"static": "cross-env PUBLIC_ADAPTER='static' npm run build",
		"static:dev": "cross-env PUBLIC_ADAPTER='static' npm run dev",
		"deploy": "npm run build && vercel --prod",
		"preview": "npm run nearley && vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"test": "npm run nearley && vitest",
		"lint": "prettier --check src/**/*.{svelte,js,css,html} *.{js,ts,json,md} && eslint src/**/*.{svelte,js}",
		"format": "prettier --write src/**/*.{svelte,js,css,html} *.{js,ts,json,md}",
		"nearley": "node src/lib/grammars/scripts/prepare-input.js && nearleyc src/lib/grammars/main.ne -o src/lib/grammars/generated/main.cjs && node src/lib/grammars/scripts/modify-output.js",
		"mobile": "npm run static && npx cap sync",
		"android:dev": "export CAPACITOR_ANDROID_STUDIO_PATH=\"$(which android-studio)\" && npm run mobile && npx cap open android",
		"ios:dev": "npm run mobile && npx cap open ios"
	},
	"dependencies": {
		"@danieloi/pro-solid-svg-icons": "6.2.1",
		"@fortawesome/free-brands-svg-icons": "^6.7.2",
		"@hebcal/core": "^5.9.8",
		"@hebcal/learning": "^6.4.1",
		"cross-env": "^7.0.3",
		"dayjs": "^1.11.13",
		"dotenv": "^16.5.0",
		"nearley": "^2.20.1",
		"prettier-plugin-organize-imports": "^4.1.0",
		"svelte-fa": "^3.0.4",
		"svelte-toc": "0.5.9",
		"xss": "^1.0.15"
	},
	"devDependencies": {
		"@capacitor/android": "^6.2.0",
		"@capacitor/assets": "^3.0.5",
		"@capacitor/cli": "^6.2.0",
		"@capacitor/core": "^6.1.2",
		"@capacitor/ios": "^6.2.0",
		"@fontsource/fira-mono": "^5.2.6",
		"@fontsource/roboto": "^5.2.6",
		"@fontsource/roboto-serif": "^5.2.6",
		"@sveltejs/adapter-static": "^2.0.3",
		"@sveltejs/adapter-vercel": "^3.1.0",
		"@sveltejs/kit": "^1.28.0",
		"@testing-library/jest-dom": "^6.6.4",
		"@testing-library/svelte": "^5.2.8",
		"@types/cookie": "^1.0.0",
		"eslint": "^9.33.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^3.11.0",
		"jsdom": "^26.1.0",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^4.2.8",
		"svelte-check": "^4.3.1",
		"vite": "^4.5.0",
		"vitest": "^3.2.4"
	}
}
